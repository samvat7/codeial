
    <h1>Codeial / <%= title %></h1>
    
    <section class="feed-posts">
        <h4>Posts</h4>

        <% if(locals.user){ %>
        <form action="http://localhost:8000/posts/create" class="new-post-form" method="post">
            <textarea name="content" cols="30" rows="3" placeholder="What's on your mind?" required></textarea>
            <input type="submit" value="Post">
        </form>
        <% } %>

        <div class="post-list">

            <% for(let i=0;i<posts.length;i++) { %>
                  <div class="user-post"> 
                    <p class="username"><%= posts[i].user.name %></p>
                    <p class="post-content"><%= posts[i].content %></p>
                    
                    <% for(let j=0;j<posts[i].comment.length; j++){ %>

                      <div class="post-comments">
                        <p class="comment-username"><%= posts[i].comment[j].user.name %></p>
                        <p class="comment-content"><%= posts[i].comment[j].content %></p>
                      </div>
                    <% } %>

                    <% if(locals.user){ %>
                    <form action="http://localhost:8000/comments/create" class="comment-form" method="post">

                      <input type="text" name="content" placeholder="Type here to add comment..." required>
                      <input type="hidden" name="post" value="<%= posts[i]._id %>">
                      <input type="submit" value="Comment">
                    </form>
                    <% } %>
                  </div> 
                <% } %>
        </div>
    </section>

    